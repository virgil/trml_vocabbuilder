<div class="view view--half-vertical" style="display: flex; flex-direction: column; height: 100%;">

    {% if word %}

      <div style="display: flex; flex-direction: column; flex-grow: 1; padding: 0.5em;">

        <div style="text-align: center; padding-bottom: 0.8em;">
            <span class="value">{{ word | escape }}</span>
             {% if partOfSpeech %}
            <span class="label label--small mb--w/h--2" style="display: block; margin-top: 0.1em margin-bottom:1em; font-style: italic;">({{ partOfSpeech | escape }})</span>
            {% endif %}
        </div>

        <div style="flex-grow: 1; display: flex; flex-direction: column;">
          {% if meaning %}
            <div style="margin-bottom: 2.4em;">
              <span class="label" style="display: block; text-align: left; line-height: 1.1;">Meaning</span>
              <span style="display: block; max-width: 100%; overflow-wrap: break-word; word-wrap: break-word; text-align: left; line-height: 1.2;">
                {{ meaning | escape }}
              </span>
            </div>
          {% endif %}
  
          {% if example %}
            <div>
              <span class="label" style="display: block; text-align: left; line-height: 1.1;">Example</span>
              <span style="display: block; max-width: 100%; overflow-wrap: break-word; word-wrap: break-word; text-align: left; font-style: italic; line-height: 1.2;">
                {{ example | escape }}
              </span>
            </div>
          {% endif %}

          {% comment %} Spacer to push title_bar to bottom {% endcomment %}
          <div style="flex-grow: 1;"></div>
        </div>

      </div>

    {% else %}
      <div style="padding: 20px; text-align: center; font-style: italic; flex-grow: 1;">
         Word of the Day data is currently unavailable.
      </div>
    {% endif %}


    <div class="title_bar">
      <img class="image" src="{{ trmnl.plugin_settings.icon_url | default: 'https://placehold.co/24x24/000000/FFFFFF/png?text=W' }}" alt="" />
      <span class="title">{{ trmnl.plugin_settings.instance_name | default: "Word of the Day" | escape }}</span>
      <span class="instance">{{ date | escape }}</span>
    </div>

</div>